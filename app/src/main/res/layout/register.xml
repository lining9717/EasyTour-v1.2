<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="5"
    tools:context=".Register">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SingUp_Login"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_become_tourist"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginTop="20dp"
        android:text="@string/become_a_tourist"
        android:background="@color/colorButton1"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_become_guider"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="2"
        android:textAllCaps="true"
        android:text="@string/become_a_guider"
        android:background="@color/colorButton2"
        />


</LinearLayout>