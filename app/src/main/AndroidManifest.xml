<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lining.easytour">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name=".TouristActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TouristSettingActivity" />
        <activity android:name=".MessageActivity" />
        <activity android:name=".SendOrderActivity" />
        <activity android:name=".QurryActivity" />
        <activity
            android:name=".Login"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Register"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"/>
        <activity
            android:name=".RegisterGuider"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"/>

        <activity
            android:name=".RegisterTourist"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"/>

        <activity
            android:name=".GuiderActivity"
            android:label="任务大厅"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>