<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lining.easytour">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/appicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".TouristActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TouristSettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MessageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SendOrderActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".QueryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterGuider"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterTourist"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GuiderActivity"
            android:label="@string/guider_market"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OrderActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BoardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TalkActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".GuiderSettingActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />
    <activity android:name=".OrderDetailActivity"
        android:theme="@style/AppTheme.NoActionBar"/>
</application>

</manifest>